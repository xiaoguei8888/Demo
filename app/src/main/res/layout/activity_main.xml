<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.boss.weather.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_city"/>

    <EditText
        android:id="@+id/edit_city_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_default_city"
        android:hint="@string/edit_hint"/>

    <Button
        android:id="@+id/btn_get_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_get_weather"/>

    <TextView
        android:id="@+id/text_weather_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_no_weather"/>

</LinearLayout>
